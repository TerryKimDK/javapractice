package app;

import java.util.Scanner;

public class BankApp1 {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		boolean run =true;
		while(run){
		System.out.println("------------------------------");
		System.out.println("1.예금 | 2.출금 | 3.잔고 | 4.종료");
		System.out.println("------------------------------");
		System.out.println("선택>");
		int selectNo = sc.nextInt();
		switch(selectNo) {
        case 1: 
        	break;
        case 2: 
        	break;
        case 3: 
        	break;
        case 4: 
        	run=false;
        break;
        }
	}

}
